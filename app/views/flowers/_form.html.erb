<%= form_with(model: flower) do |form| %>
  <% if flower.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(flower.errors.count, "error") %> prohibited this flower from being saved:</h2>

      <ul>
        <% flower.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :mesh_id, style: "display: block" %>
    <%= collection_select(:flower, :mesh_id, Mesh.all, :id, :name) %>
  </div>

  <div>
    <%= form.label :color_id, style: "display: block" %>
    <%= collection_select(:flower, :color_id, Color.all, :id, :hex) %>
  </div>

  <div>
    <%= form.label :hash_string, style: "display: block" %>
    <%= form.text_field :hash_string %>
  </div>

  <div>
    <%= form.label :broken, style: "display: block" %>
    <%= form.check_box :broken %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
